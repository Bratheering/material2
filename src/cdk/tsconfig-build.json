// TypeScript config file that is used to compile the cdk. Target environment needs to be
// ES2015 since the build process will create FESM bundles using rollup.
{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": false,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "$PROJECT_ROOT/dist/packages/cdk",
    "rootDir": "$PROJECT_ROOT",
    "baseUrl": "$PROJECT_ROOT",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "types": [],
    "paths": {
      "@angular/cdk/*": ["./dist/packages/cdk/*"],
      "@angular/material": ["./dist/packages/material"]
    }
  },
  "files": [
    "$ENTRY_FILE"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "$MODULE_ID"
  }
}
